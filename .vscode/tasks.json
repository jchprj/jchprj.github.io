{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "jekyll serve",
            "type": "shell",
            "command": "wsl",
            "args": [
                "jekyll",
                "serve",
                "--livereload"
            ],
            "group": "test"
        },
        {
            "label": "jekyll build",
            "type": "shell",
            "command": "wsl",
            "args": [
                "jekyll",
                "build"
            ],
            "group": "build"
        },
        {
            "label": "bundle install",
            "type": "shell",
            "command": "wsl",
            "args": [
                "bundle",
                "install"
            ],
            "group": "build"
        }
    ]
}